function TimeNow, string
    record
        now, d20
    endrecord
proc
    now = %datetime
    freturn %string(now(9:6),"XX:XX:XX ")
endfunction

function DateTimeNow, string
    record
        now, d20
    endrecord
proc
    now = %datetime
    freturn %string(now(1:14),"XXXX-XX-XX XX:XX:XX ")
endfunction
